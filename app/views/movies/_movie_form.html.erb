<%= form_for movie do |movie_fields| %>
  <%= movie_fields.text_field :title, placeholder: "Title" %><br>
  <%= movie_fields.collection_check_boxes :actor_ids, Actor.all, :id, :name %><br>
  <%= movie_fields.fields_for :quotes do |quote_fields| %>
    <% if quote_fields.object.persisted? %>
      <%= quote_fields.check_box :_destroy %>
    <% end %>
    <%= quote_fields.text_field :text %>
  <% end %><br>
  <%= movie_fields.submit %>
<% end %>